
.dateChoice {
  height: 40px;
  width: 100%;
  background-color: whitesmoke;
  margin-top: 10px;
  margin-left: 3%;
}

.selected {
  display: inline-block;
  background-color: lightskyblue;
  width: 23.5%;
  height: 30px;
  color: white;
  font-size: 13px;
}

.normal {
  display: inline-block;
  background-color: gainsboro;
  width: 23.5%;
  height: 30px;
  color: #333333;
  font-size: 13px;
}

.title1 {
  margin-left: 3%;
  background-color: lightskyblue;
  height: 30px;
  width: 80px;  
  display: table;
  margin-bottom: 10px;
}
.text1 {
  font-size: 15px;
  vertical-align: middle;
  display: table-cell;
}

.classifyTitle {
  display: flex;
  margin-left: 3%;
  width: 94%;
  justify-content: space-around;
  height: 35px;
  background-color: lightskyblue;
}

.classifyName {
  margin-top: 5px;
  font-size: 18px;
  color: white;
}

.recordView {
  display: flex;
  height: 40px;
  justify-content: space-around;
  flex-direction: row;
}

.recordText {
  font-size: 15px;
  color: #333333;
  width: 30%;
  text-align: center;
  vertical-align: middle;
  align-self: center;
}

.line {
  height: 1px;
  width: 100%;
  background-color: lightgrey;
}
