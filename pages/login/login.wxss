/* 手机号登录框 */
.mobile-login-content{
    width: 100%;
    height: 180rpx;
    background-color: #FFFFFF;
    box-sizing: border-box;
    font-size: 28rpx;
}
.mobile-login-content input{

    display: block;
    margin-top: 15px;
    /* width: 10rem; */
}
.mobile-login-number{
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    width: 80%;
    margin-left: 10%;
    height: 90rpx;
    box-sizing: border-box;
}

.mobile-login-vcode{
    display: flex;
    width: 60%;
    height: 90rpx;
    box-sizing: border-box;
    justify-content: flex-start;
    align-items: center;
   margin-left: 10%;
}
.line{
width: 80%;
height: 1rpx;
margin-left: 10%;
background-color: #333;
}
.mobile-login-getvcode{
    position: absolute;
    top: 230rpx;
    right: 12%;
    background-color: #44B46A;
    line-height: 56rpx;
    width: 240rpx;
    text-align: center;
    border-radius: 28rpx;
    color: #FFFFFF;
}
.mobile-login-getvcode.disable{
    background-color: #D2D5D8;
    color: #FFFFFF;
}
.mobile-login-submit{
    width: 80%;
    line-height: 75rpx;
    background-color: #44B46A;
    margin: 60rpx auto 24rpx auto;
    text-align: center;
    border-radius: 10rpx;
    color: #FFFFFF;
}
