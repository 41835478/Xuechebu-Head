/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  display: flex;
  height: 50px;
  width: 100%;
  justify-content: center;
  background-color: lightgray;
}
.user-motto {
  display: flex;
  align-self: center;
  font-size: 18px;
  font-weight: 500;
  color: red;
}