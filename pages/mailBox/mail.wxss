.selected {
  display: inline-block; 
  background-color: lightskyblue;
  height: 30px;
  color: white;
  width: 23.5%; 
  font-size: 13px;
}

.normal {
  display: inline-block; 
  background-color: gainsboro;
  width: 23.5%; 
  height: 30px;
  color: #333333;
  font-size: 13px;
}


.title1 {
  margin-left: 3%;
  background-color: lightskyblue;
  height: 30px;
  width: 80px;  
  display: table;
  margin-bottom: 10px;
}
.text1 {
  font-size: 15px;
  vertical-align: middle;
  display: table-cell;
}

.classifyTitle {
  display: flex;
  margin-left: 3%;
  width: 94%;
  justify-content: space-around;
  height: 35px;
  background-color: lightskyblue;
}

.classifyName {
  font-size: 16px;
  color: white;
  align-self: center;
}

.recordView {
  display: flex;
  height: 40px;
  justify-content: space-around;
  flex-direction: row;
}

.recordText {
  font-size: 15px;
  color: #333333;
  width: 25%;
  text-align: center;
  vertical-align: middle;
  align-self: center;
}

.line {
  height: 1px;
  width: 100%;
  background-color: lightgrey;
}

.canvas{
  width: 96%;
  height: 200px;
}

.choice_box {
  padding: 0 10rpx;
  margin-top: 53px;

}
.choice_box .choice_list .choice_item{
  display: flex;
  flex-direction: row;
   margin-bottom: 15px;
}
.choice_box .choice_list image {
    width: 100%;
    height: 80px;
}

.choice_box .choice_list .title {
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    color: #333;
}

.imageView {
  width: 30%;
  margin-right: 10px;
  border-radius:40px;
  border:1rpx solid red;
  background-clip: border-box;
}

.newsTitle {
  margin-right: 10px;
  font-size: 14px;
}

.infoDetail {
  margin-right: 10px;
}

.detialView {
  display: flex;
  justify-content: space-between;
}
.category {
  font-size: 13px;
  color: red;
  align-self: center;
  border-radius:2px;
  border:1rpx solid red;
}
.date {
  font-size: 13px;
  align-self: center;
}