/* pages/book/book.wxss */
.back {
  display: flex;
  position: relative;
  justify-content: space-between;
  flex-direction: column;
  height: 100%;
}
.catView {
  margin-top: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.catImage {
  align-self: center;
  width: 213px;
  height: 300px;
}

.tip {
  font-size: 18px;
  color: #666666;
  text-align: left;
  align-self: center;
}

.bottomView {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 50px;
}

.line {
  margin-top: 13px;
  background-color: #f2f2f2;
  width: 30%;
  height:0.5px;
}

.text {
  font-size: 16px;
  color: #666666;
  width: 20%;
}