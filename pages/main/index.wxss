.text {
     padding: 10px 10px 3px 13rpx; 
    font-size: 15px;
    color: #656565;
    justify-content: space-between;
      display:  flex;
  flex-direction: row;
}


.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}


view.text text {
  margin-left: 15px;
  line-height: 10px;
  font-weight: bold;
  color: #F2f2f2;
}

.venues_box {
  margin-top: 10px;
  padding: 0 10rpx;
}

.venues_item {
    display: inline-block;
    width: 31.3%;
    margin: 0 1% 1% 1%;
}

.venues_item image{
    width: 100%;
    height: 166rpx;
}

.choice_box {
    padding: 0 18rpx;
}
.choice_box .choice_list .choice_item{
  display: flex;
  flex-direction: row;
   margin-bottom: 3px;
   margin-top: 7px;
}
.choice_box .choice_list image {
   width: 107px;
    height: 80px;
}

.choice_box .choice_list .title {
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    color: #333;
}

.imageView {
  margin-right: 10px;
}


.infoDetail {
  display: flex;
  margin-right: 10px;
  width: 100%;
  flex-direction: column;
  justify-content: space-between;
}

.newsTitle {
  display: -webkit-box;
   -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
  margin-top: 5px;
  margin-right: 10px;
  font-size: 14px;
}



.detialView {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}
.category {
  font-size: 13px;
  color: red;
  align-self: center;
  border-radius:2px;
  border:1rpx solid red;

}
.date {
  font-size: 13px;
  align-self: center;

}