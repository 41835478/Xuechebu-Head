.container {
    background-color: white;
}
.line {
  width: 100%;
  height: 1px;
  background-color: #f2f2f2;
}
.swiper_box {
    width: 100%;
    height: 316.4rpx;
}

.rightArrow {
  width: 8px;
  height: 12px;
}
swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height: 316.4rpx;
}

/* .line_flag {


